<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.versantweb.formationphonegap"
        version     = "1.0.0" >

    <name>Formation PhoneGap</name>

    <description>
        Une petite application utilisée pour la formation à PhoneGap
    </description>

    <author href="https://versantweb.ch" email="herve.torche@versantweb.ch">
        Hervé Torche - Versant Web Communication
    </author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="phonegap-version" value="3.5.0" />
    
    <!-- pour permettre le téléchargement du programme TV -->
    <access origin="http://webnext.fr" subdomains="true" />
    
    <!-- plugin pour utiliser la vibration -->
    <gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />
    
    <!-- plugin pour le partage social -->
    <gap:plugin name="nl.madebymark.share" version="0.1.1" />


</widget>