<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.versantweb.formationphonegap"
        version     = "1.0.0" >

    <name>Formation PhoneGap</name>

    <description>
        Une petite application utilisée pour la formation à PhoneGap
    </description>

    <author href="https://versantweb.ch" email="herve.torche@versantweb.ch">
        Hervé Torche - Versant Web Communication
    </author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="phonegap-version" value="3.6.3" />
    
    <!-- pour permettre le téléchargement du programme TV -->
    <access origin="http://webnext.fr" subdomains="true" />
    
    <!-- plugin pour utiliser la vibration -->
    <gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />
    
    <!-- plugin pour le partage social -->
    <gap:plugin name="nl.madebymark.share" version="0.1.1" />

    

    <!-- icône par défaut -->
    <icon src="icon.png" />


    <!-- icônes iOS -->
    
    <!-- iPhone / iPod Touch  -->
    <icon src="medias/icons/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="medias/icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="medias/icons/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="medias/icons/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="medias/icons/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="medias/icons/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="medias/icons/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="medias/icons/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" />


    <!-- icônes Android -->

    <!-- LDPI - 36 x 36 -->
    <icon src="medias/icons/android/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />

    <!-- MDPI - 48 x 48 -->
    <icon src="medias/icons/android/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />

    <!-- HDPI - 72 x 72 -->
    <icon src="medias/icons/android/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />

    <!-- XHDPI - 96 x 96 -->
    <icon src="medias/icons/android/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />

    <!-- XXHDPI - 144 x 144 -->
    <icon src="medias/icons/android/xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />

    <!-- XXXHDPI - 192 x 192 -->
    <icon src="medias/icons/android/xxxhdpi.png" gap:platform="android" gap:qualifier="xxxhdpi" />



    <!-- Splash Screen par défaut -->
    <gap:splash src="splash.png" />


    <!-- Splash Screen iOS -->

    <!-- iPhone and iPod touch -->
    <gap:splash src="medias/splashscreens/ios/Default-portrait~iphone.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="medias/splashscreens/ios/Default-portrait@2x~iphone4.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="medias/splashscreens/ios/Default-portrait@2x~iphone5.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPad -->
    <gap:splash src="medias/splashscreens/ios/Default-Portrait~ipad.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="medias/splashscreens/ios/Default-Landscape~ipad.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="medias/splashscreens/ios/Default-Portrait@2x~ipad.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="medias/splashscreens/ios/Default-Landscape@2x~ipad.png" gap:platform="ios" width="2048" height="1536" />

    
    <!-- Splash Screen Android -->

    <!-- LDPI - 240 x 320 -->
    <gap:splash src="medias/splashscreens/android/ldpi.9.png" gap:platform="android" gap:qualifier="ldpi" />

    <!-- MDPI - 320x480 -->
    <gap:splash src="medias/splashscreens/android/mdpi.9.png" gap:platform="android" gap:qualifier="mdpi" />

    <!-- HDPI - 480x800 -->
    <gap:splash src="medias/splashscreens/android/hdpi.9.png" gap:platform="android" gap:qualifier="hdpi" />

    <!-- XHDPI - 640x960 -->
    <gap:splash src="medias/splashscreens/android/xhdpi.9.png" gap:platform="android" gap:qualifier="xhdpi" />
</widget>